<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MenuActivity">

    <Button
        android:id="@+id/chat1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="chatButtonClicked"
        android:text="chat1"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="53dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_addName"
        />

    <EditText
        android:id="@+id/editText_addName"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:text="Enter name of your friend"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="218dp"
        app:layout_constraintTop_toBottomOf="@+id/chat1"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/textView"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/editText_addName"
        app:layout_constraintEnd_toEndOf="@+id/editText_addName"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>